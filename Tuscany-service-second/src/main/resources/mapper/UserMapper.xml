<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.draper.tuscany_service_second.mapper.UserMapper">

    <insert id="insertByPhone">
        INSERT INTO user
        (create_at,update_at,name,phone,password)
        VALUES
        (#{createAt}, #{updateAt}, #{name}, #{phone}, #{password})
    </insert>

    <insert id="insertByEmail">
        INSERT INTO user
        (create_at,update_at,name,email,password)
        VALUES
        (#{createAt}, #{updateAt}, #{name}, #{email}, #{password})
    </insert>

    <select id="selectByPhone" resultType="com.draper.tuscany_core.model.User">
        SELECT *
        FROM user
        WHERE phone = #{phone}
    </select>

    <select id="selectByEmail" resultType="com.draper.tuscany_core.model.User">
        SELECT *
        FROM user
        WHERE email = #{email}
    </select>

</mapper>